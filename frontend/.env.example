# Zuper Checklist Frontend Environment Variables
# Copy this file to .env.local and update values as needed

# Backend API URL
# Default: http://localhost:3001 (for development)
# Production: https://your-backend-domain.com
VITE_API_URL=http://localhost:3001

# Environment
# Options: development, staging, production
VITE_ENV=development

# App Configuration
VITE_APP_NAME="Zuper Checklist Import Tool"
VITE_APP_VERSION=1.0.0

# Feature Flags (optional)
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_ANALYTICS=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_FILE_SIZE=20971520  # 20MB in bytes

# UI Configuration
VITE_TOAST_DURATION=4000
VITE_DEFAULT_REGION=us-east-1

# Development Settings
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true